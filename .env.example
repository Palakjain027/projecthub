# ProjectHub Environment Variables

# ==================== DATABASE ====================
POSTGRES_USER=projecthub
POSTGRES_PASSWORD=projecthub_secret
POSTGRES_DB=projecthub
DATABASE_URL=postgresql://projecthub:projecthub_secret@localhost:5432/projecthub?schema=public

# ==================== REDIS ====================
REDIS_PASSWORD=redis_secret
REDIS_URL=redis://:redis_secret@localhost:6379

# ==================== JWT ====================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== SERVER ====================
NODE_ENV=development
PORT=5000
API_VERSION=v1
FRONTEND_URL=http://localhost:5173

# ==================== STRIPE ====================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# ==================== AWS S3 ====================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=projecthub-uploads
AWS_REGION=us-east-1

# ==================== EMAIL (SMTP) ====================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@projecthub.com
SMTP_FROM_NAME=ProjectHub

# ==================== OPENAI ====================
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# ==================== CLIENT ====================
VITE_API_URL=http://localhost:5000/api/v1
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
